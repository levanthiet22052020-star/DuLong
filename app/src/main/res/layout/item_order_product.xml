<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:background="#FFFFFF"
    android:layout_marginBottom="1dp"> <ImageView
    android:id="@+id/imgOrderProduct"
    android:layout_width="70dp"
    android:layout_height="70dp"
    android:src="@drawable/ic_logo_only"
    android:scaleType="centerCrop"
    android:background="#F5F5F5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvOrderProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="#000000"
            android:textSize="14sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phân loại: Mặc định"
            android:textSize="12sp"
            android:textColor="#888888"
            android:layout_marginTop="4dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="end">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x1"
                android:textColor="#888888"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tvOrderProductPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="355.000đ"
                android:textColor="#000000"
                android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>